@{
    bool errorEnLogin = ViewBag.ErrorEnLoginAdmin != null;  
    Layout = "~/Views/Shared/_LayoutLoginRegister.cshtml";
}
<h1>Iniciar Sesion como Administrador</h1>
<div class="container-fluid">
    <div class="row">
        <div class="columnaIzquierda col-md-6 col-sm-12">
            <img class="foto-login" src="~/images/fotoLogin.jpg" />
        </div>
        <div class="columnaDerecha col-md-4 col-sm-12">
                <form method="POST" class="form-login" asp-action="AdminAccount" asp-controller="Login">
                    <h1 class="titulo-login">EmpresaIT</h1>
                    
                    <div class="form-group">
                        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555zM0 4.697v7.104l5.803-3.558L0 4.697zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757zm3.436-.586L16 11.801V4.697l-5.803 3.546z"/>
                        </svg>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                         <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                            <path d="M2.5 9a2 2 0 0 1 2-2h7a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-7a2 2 0 0 1-2-2V9z"/>
                            <path fill-rule="evenodd" d="M4.5 4a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z"/>
                        </svg>
                        <input type="password" class="form-control" id="password" name="contraseña" placeholder="Contraseña" required>
                    </div>
                    @if(errorEnLogin){
                        <div class="alert alert-danger" role="alert">
                            El email y/o nombre no son válidos.
                        </div>
                    }

                    <button type="submit" class="botonLogin btn btn-primary">Iniciar Sesion</button><br/><br/><hr>
                    <p>No tienes cuenta ?</p>
                    <a type="text" class="btn btn-link" asp-controller="Register" asp-action="Register">Registrar</a>
                </form>
                <a href="/Home/Index">Volver a Home</a>
        </div>
    </div>
</div>
