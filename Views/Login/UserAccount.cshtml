@{
    bool errorEnLogin = ViewBag.ErrorEnLogin != null;
}

<h1>Iniciar Sesion</h1>
<form method="POST" asp-action="UserAccount" asp-controller="Login">
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" name="email" placeholder="Ingresa tu email" required>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Nombre de Empleado</label>
        <input type="text" class="form-control" id="exampleInputPassword1" name="nombre" placeholder="Ingresa tu nombre" required>
    </div>
    @if(errorEnLogin){
        <div class="alert alert-danger" role="alert">
            El email y/o nombre no son v√°lidos.
        </div>
    }

    <button type="submit" class="btn btn-primary">Iniciar Sesion</button>
    <a type="text" class="btn btn-primary" asp-controller="Register" asp-action="Register">Registrar</a>
</form>